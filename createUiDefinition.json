{
  "$schema": "https://schema.management.azure.com/schemas/0.1.2-preview/CreateUIDefinition.MultiVm.json#",
  "handler": "Microsoft.Azure.CreateUIDef",
  "version": "0.1.2-preview",

  "parameters": {
    "config": {
      "isWizard": false,
      "basics": {
        "subscription": {
          "constraints": {
            "required": true
          }
        },
        "resourceGroup": {
          "allowExisting": true
        },
        "location": {
          "visible": false
        }
      }
    },

    "basics": [],
    "steps": [
      {
				"name": "clusterDetails",
				"label": "Cluster Details",
				"elements": [
					{
						"name": "existingClusterSection",
						"type": "Microsoft.Common.Section",
						"elements": [
							{
								"name": "clusterLookupControl",
								"type": "Microsoft.Solutions.ArmApiControl",
								"request": {
									"method": "GET",
									"path": "[concat(subscription().id, '/resourcegroups/', resourceGroup().name,  '/providers/Microsoft.ContainerService/managedClusters?api-version=2024-09-01')]"
								}
							},
							{
								"name": "existingClusterResourceName",
								"type": "Microsoft.Common.DropDown",
								"label": "AKS Cluster Name",
								"toolTip": "AKS Cluster Resource Name",
								"constraints": {
									"allowedValues": "[map(steps('clusterDetails').existingClusterSection.clusterLookupControl.value, (item) => parse(concat('{\"label\":\"', item.name, '\",\"value\":\"', item.name, '\"}')))]",
									"required": true
								}
							}
						],
						"visible": true
					}
        ]
      },
      {
        "name": "applicationDetails",
        "label": "Alluxio Operator Configuration",
        "elements": [
          {
						"name": "extensionResourceName",
						"type": "Microsoft.Common.TextBox",
						"label": "Cluster extension resource name",
						"defaultValue": "alluxio-operator-instance",
						"toolTip": "Only lowercase alphanumeric characters and hyphens are allowed. It must start and end with an alphanumeric character and be 6-30 characters long.",
						"constraints": {
							"required": true,
							"regex": "^[a-z0-9][-a-z0-9]{4,28}[a-z0-9]$",
							"validationMessage": "Only lowercase alphanumeric characters and hyphens are allowed. It must start and end with an alphanumeric character and be 6-30 characters long."
						},
						"visible": true
          }
        ]
      }
    ],
    "outputs": {
      "clusterResourceName": "[steps('clusterDetails').existingClusterSection.existingClusterResourceName]",
      "extensionResourceName": "[steps('applicationDetails').extensionResourceName]"
    }
  }
}

